{% for i in range(0, 51) -%}
  .ModeCard[data-stack-size="{{i}}"] {
    box-shadow: 
      0px 0px 0 1px #fff,
      {% set color = cycler("#ccc", "#fff") %}
      {% set width = cycler("1px", "1px") %}
{% for x in range(0, i) %}
      0px {{(x + 1)}}px 0.5px {{width.next()}} {{color.next()}},{%- endfor %}
      1px {{(i + 1) + 2}}px 12px 0px rgb(100 100 100 / 0.5);
  }
{%- endfor %}
